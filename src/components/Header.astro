---
import { SITE_TITLE } from "../consts";
---

<header class="bg-primary">
  <nav
    class="mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8"
    aria-label="Global"
  >
    <a href="/" class="-m-1.5 p-1.5">
      <span class="sr-only">Davide Imola</span>
      <img class="h-8 w-auto" src="/favicon.svg" alt="" />
    </a>
    <div class="flex lg:hidden">
      <button
        type="button"
        class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-white"
        mobile-navbar-open
      >
        <span class="sr-only">Open main menu</span>
        <svg
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
        </svg>
      </button>
    </div>
    <div class="hidden lg:flex lg:gap-x-12">
      <a href="/about" class="text-sm font-semibold leading-6 text-white"
        >About</a
      >
      <a href="/blog" class="text-sm font-semibold leading-6 text-white">Blog</a
      >
      <a href="/speaking" class="text-sm font-semibold leading-6 text-white"
        >Speaking</a
      >
    </div>
  </nav>
  <!-- Mobile menu, show/hide based on menu open state. -->
  <div class="lg:hidden hidden" role="dialog" aria-modal="true" mobile-menu>
    <!-- Background backdrop, show/hide based on slide-over state. -->
    <div class="fixed inset-0 z-10"></div>
    <div
      class="fixed inset-y-0 right-0 z-10 w-full overflow-y-auto bg-gray-800 px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10"
    >
      <div class="flex items-center justify-between">
        <a href="/" class="-m-1.5 p-1.5">
          <span class="sr-only">Davide Imola</span>
          <img class="h-8 w-auto" src="/favicon.svg" alt="" />
        </a>
        <button
          type="button"
          class="-m-2.5 rounded-md p-2.5 text-white"
          mobile-navbar-close
        >
          <span class="sr-only">Close menu</span>
          <svg
            class="h-6 w-6"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      <div class="mt-6 flow-root">
        <div class="-my-6 divide-y divide-gray-500/10">
          <div class="space-y-2 py-6">
            <a
              href="/about"
              class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-white"
              >About</a
            >
            <a
              href="/blog"
              class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-white"
              >Blog</a
            >
            <a
              href="/speaking"
              class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-white"
              >Speaking</a
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
<script>
  const openButtons = document.querySelectorAll("[mobile-navbar-open]");

  openButtons.forEach((button) => {
    button.addEventListener("click", () => {
      document.querySelector("[mobile-menu]").classList.toggle("hidden");
    });
  });

  const closedButtons = document.querySelectorAll("[mobile-navbar-close]");

  closedButtons.forEach((button) => {
    button.addEventListener("click", () => {
      document.querySelector("[mobile-menu]").classList.toggle("hidden");
    });
  });
</script>
